                            +radio( '/motor/rotation/speed/', 'motor-rotation', 'motor-rotation-high', 'high', 'High' )
                            +radio( '/motor/rotation/speed/', 'motor-rotation', 'motor-rotation-medium',  'medium', 'Medium' )
                            +radio( '/motor/rotation/speed/', 'motor-rotation', 'motor-rotation-low', 'low', 'Low' )


        #page-control-mode( data-role='page' )
            div( data-role='header' )
                a( href="#page-index" class='ui-btn-left ui-btn ui-btn-inline ui-mini ui-corner-all ui-btn-icon-left ui-icon-home' ) Home
                h1 Control Mode
            .ui-content( role='main' )
                form
                    ul( data-role="listview", data-inset="true" )
                        li( data-role="list-divider") Motor Status
                        li( style="padding:0;border:0;" )
                        fieldset( data-rest-type='feildset', data-rest-uri='/motor/controller/is-enabled/', data-role='controlgroup', style='margin:0' ).ui-mini
                            // legend Control Mode:
                            +radio( '/motor/controller/is-enabled/', 'is-enabled', 'is-enabled-no', 'no', 'Disabled' )
                            +radio( '/motor/controller/is-enabled/', 'is-enabled', 'is-enabled-yes', 'yes', 'Enabled' )
                
                    ul( data-role="listview", data-inset="true" )
                        li( data-role="list-divider") Control Mode
                        li( style="padding:0;border:0;" )
                        fieldset( data-rest-type='feildset', data-rest-uri='/host/control/mode/', data-role='controlgroup', style='margin:0' ).ui-mini
                            // legend Control Mode:
                            +radio( '/host/control/mode/', 'control-mode', 'control-mode-none', 'manual', 'Manual Controls Only' )
                            +radio( '/host/control/mode/', 'control-mode', 'control-mode-sequence', 'sequence', 'Running Sequence' )
                            +radio( '/host/control/mode/', 'control-mode', 'control-mode-phone-1', 'phone-1', 'Controlled by Phone 1' )
                            +radio( '/host/control/mode/', 'control-mode', 'control-mode-phone-2', 'phone-2', 'Controlled by Phone 2' )
                            +radio( '/host/control/mode/', 'control-mode', 'control-mode-phone-3', 'phone-3', 'Controlled by Phone 3' )
                            +radio( '/host/control/mode/', 'control-mode', 'control-mode-phone-4', 'phone-4', 'Controlled by Phone 4' )
        
                    ul( data-role="listview", data-inset="true" )
                        li( data-role="list-divider") Motor Direction
                        li( style="padding:0;border:0;" )
                        fieldset( data-rest-type='feildset', data-rest-uri='/motor/rotation/direction/', data-role='controlgroup', style='margin:0' ).ui-mini
                            // legend Control Mode:
                            +radio( '/motor/rotation/direction/', 'motor-direction', 'motor-direction-forward', 'forward', 'Forward' )
                            +radio( '/motor/rotation/direction/', 'motor-direction', 'motor-direction-none',  'none', 'None' )
                            +radio( '/motor/rotation/direction/', 'motor-direction', 'motor-direction-backward', 'backward', 'Backward' )

                    ul( data-role="listview", data-inset="true" )
                        li( data-role="list-divider") Motor Rotation
                        li( style="padding:0;border:0;" )
                        fieldset( data-rest-type='feildset', data-rest-uri='/motor/rotation/speed/', data-role='controlgroup', style='margin:0' ).ui-mini
